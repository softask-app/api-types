{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://softask-app.github.io/api-types/v1/types/task/step/full.json",
  "title": "Full Task Step Record",
  "type": "object",
  "properties": {
    "id": {
      "$ref": "../../pg/serial8.json"
    },
    "task": {
      "$ref": "../short.json"
    },
    "description": {
      "type": "string",
      "minLength": 3,
      "maxLength": 1024
    },
    "position": {
      "type": "integer",
      "minimum": 1,
      "maximum": 32767
    },
    "creator": {
      "$ref": "../../user/short.json"
    },
    "created": {
      "$ref": "../../meta/date-time.json"
    },
    "updated": {
      "$ref": "../../meta/date-time.json"
    },
    "delete": {
      "$ref": "../../meta/date-time.json"
    }
  },
  "required": [
    "id",
    "task",
    "description",
    "position",
    "creator",
    "created",
    "updated"
  ]
}
