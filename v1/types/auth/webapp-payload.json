{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://softask-app.github.io/api-types/v1/types/auth/webapp-payload.json",
  "title": "Login Authentication Payload",
  "description": "Authentication body for login requests.",
  "type": "object",
  "properties": {
    "email": {
      "title": "User Email Address",
      "type": "string",
      "format": "email"
    },
    "password": {
      "$ref": "password.json"
    }
  },
  "required": [
    "email",
    "password"
  ],
  "additionalProperties": false,
  "example": {
    "email": "foobar@softask.app",
    "password": "N4hMGU*Byr77@m2!"
  }
}
